generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  stage1    Int    @default(0)
  stage2    Int    @default(3)
  stage3    Int    @default(3)
  stage4    Int    @default(3)
  stage5    Int    @default(3)
  stage6    Int    @default(3)
  role     String @default("user")

  @@map("users") 
}
